<Page x:Class="PhanNgocBaoTramWPF.Views.Pages.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Booking Management">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Combobox khách hàng & phòng -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="cbCustomer" Width="150" Margin="0,0,10,0" DisplayMemberPath="CustomerFullName" SelectedValuePath="CustomerID"/>
            <ComboBox x:Name="cbRoom" Width="150" Margin="0,0,10,0" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomID"/>
            <DatePicker x:Name="dpFrom" Width="120" Margin="0,0,10,0"/>
            <DatePicker x:Name="dpTo" Width="120" Margin="0,0,10,0"/>
            <Button Content="Create" Width="80" Click="BtnCreate_Click"/>
        </StackPanel>

        <!-- DataGrid hiển thị booking -->
        <DataGrid x:Name="dgBookings" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookingID}" Width="60"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150"/>
                <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="100"/>
                <DataGridTextColumn Header="From" Binding="{Binding StartDate}" Width="100"/>
                <DataGridTextColumn Header="To" Binding="{Binding EndDate}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=C0}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
