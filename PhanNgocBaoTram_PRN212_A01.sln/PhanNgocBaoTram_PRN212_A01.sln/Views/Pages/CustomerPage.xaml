<Page x:Class="PhanNgocBaoTramWPF.Views.Pages.CustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Customer Management">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Add/Delete -->
        </Grid.RowDefinitions>

        <!-- 🔍 Thanh tìm kiếm -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name="txtSearch" Width="250" Height="30" Margin="0,0,8,0" 
                     ToolTip="Search by name, email or phone"/>
            <Button Content="Search" Width="80" Height="30" Margin="0,0,8,0" Click="BtnSearch_Click"/>
            <Button Content="Refresh" Width="80" Height="30" Click="BtnRefresh_Click"/>
        </StackPanel>

        <!-- 📋 Bảng danh sách khách hàng -->
        <DataGrid x:Name="dgCustomers"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  RowHeight="30"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="#FFF8F8F8"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="60"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="200"/>
                <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="220"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Telephone}" Width="150"/>
                <DataGridTextColumn Header="Birthday" Binding="{Binding CustomerBirthday, StringFormat=d}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ➕ Form nhập / xóa khách -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name="txtName" Width="150" Height="28" Margin="0,0,8,0" ToolTip="Full Name"/>
            <TextBox x:Name="txtEmail" Width="150" Height="28" Margin="0,0,8,0" ToolTip="Email"/>
            <TextBox x:Name="txtPhone" Width="120" Height="28" Margin="0,0,8,0" ToolTip="Phone"/>
            <DatePicker x:Name="dpBirth" Width="140" Height="28" Margin="0,0,8,0"/>
            <Button Content="Add" Width="80" Height="28" Margin="0,0,8,0" Click="BtnAdd_Click"/>
            <Button Content="Delete" Width="80" Height="28" Click="BtnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
