<Page x:Class="PhanNgocBaoTramWPF.Views.Pages.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Room Management">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- 🔍 Thanh tìm kiếm -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name="txtSearch" Width="250" Height="30" Margin="0,0,8,0" 
                     ToolTip="Search by room number or description"/>
            <Button Content="Search" Width="80" Height="30" Margin="0,0,8,0" Click="BtnSearch_Click"/>
            <Button Content="Refresh" Width="80" Height="30" Click="BtnRefresh_Click"/>
        </StackPanel>

        <!-- 📋 Bảng danh sách phòng -->
        <DataGrid x:Name="dgRooms"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  RowHeight="30"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="#FFF8F8F8"
                  Margin="0,0,0,10"
                  SelectionChanged="DgRooms_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="60"/>
                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="120"/>
                <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}" Width="250"/>
                <DataGridTextColumn Header="Price/Day" Binding="{Binding RoomPricePerDate, StringFormat=C0}" Width="120"/>
                <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="80"/>
                <DataGridTextColumn Header="Type ID" Binding="{Binding RoomTypeID}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ➕ Form nhập / xóa phòng -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name="txtNumber" Width="120" Height="28" Margin="0,0,8,0" ToolTip="Room Number"/>
            <TextBox x:Name="txtDescription" Width="200" Height="28" Margin="0,0,8,0" ToolTip="Description"/>
            <TextBox x:Name="txtPrice" Width="100" Height="28" Margin="0,0,8,0" ToolTip="Price per day"/>
            <TextBox x:Name="txtCapacity" Width="80" Height="28" Margin="0,0,8,0" ToolTip="Max Capacity"/>
            <ComboBox x:Name="cmbRoomType" Width="100" Height="28" Margin="0,0,8,0" ToolTip="Room Type"/>
            <Button Content="Add" Width="80" Height="28" Margin="0,0,8,0" Click="BtnAdd_Click"/>
            <Button Content="Edit" Width="80" Height="28" Margin="0,0,8,0" Click="BtnEdit_Click"/>
            <Button Content="Delete" Width="80" Height="28" Click="BtnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
