<Window x:Class="PhanNgocBaoTramWPF.Views.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Dialog" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Room Number -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Label Content="Number:" Width="100"/>
            <TextBox x:Name="txtNumber" Width="200"/>
        </StackPanel>

        <!-- Room Type -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="1">
            <Label Content="Type ID:" Width="100"/>
            <TextBox x:Name="txtTypeID" Width="200"/>
        </StackPanel>

        <!-- Capacity -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="2">
            <Label Content="Capacity:" Width="100"/>
            <TextBox x:Name="txtCapacity" Width="200"/>
        </StackPanel>

        <!-- Price -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="3">
            <Label Content="Price/day:" Width="100"/>
            <TextBox x:Name="txtPrice" Width="200"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="BtnOK_Click"/>
            <Button Content="Cancel" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
